#sorting in ascending order
my_list = [90,80,50,102,300,10]
new_list = []

while my_list:
    min = my_list[0]  
    for x in my_list: 
        if x < min:
            min = x
    new_list.append(min)
    my_list.remove(min)    

print(new_list)

#sorting in Descending order
my_list = [90,80,50,102,300,10,2]
new_list = []

while my_list:
    max = my_list[0]  
    for x in my_list: 
        if x > max:
            max = x
    new_list.append(max)
    my_list.remove(max)    

print(new_list)
